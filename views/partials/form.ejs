<form action="/resultado" method="post" >
    <div class="form-column">
        <div class="form-group col-md-6">
            <label for="inputId">Id</label>
            <input type="number" class="form-control" id="inputId" name='id' value='<%= idPagina %>' placeholder="Introduce id">
        </div>
    </div>
    <div class="form-column"></div>
    <div class="form-group col-md-3">
        <label for="operacion">Operacion</label>
        <select id="operacion" class="form-control" name='operacion'>
            <option value="+" selected>Suma</option>
            <option value="-">Restar</option>
            <option value="*">Multiplicacion</option>
            <option value="/">Dividir</option>
            <option value="Reset">Resetear</option>
        </select>
    </div>
    <div class="form-column">
        <div class="form-group col-md-6">
            <label for="numero">NÃºmero</label>
            <input type="number" class="form-control" name='numero' value='0'>
        </div>
    </div>
    <div class="form-column">
        <div class="form-group col-md-6">
            <button type="submit" class="btn btn-primary btn-lg" id="data">Enviar</button>
            <button type="reset" class="btn btn-primary btn-lg">Reset</button>
        </div>
    </div>
</form>